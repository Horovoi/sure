<%# locals: (balance_sheet:, period:, **args) %>

<div id="net-worth-chart" data-controller="networth-sync">
  <% series = balance_sheet.net_worth_series(period: period) %>
  <div class="flex justify-between gap-4 px-4">
    <div class="space-y-2">
      <div class="space-y-2">
        <div class="flex items-center gap-2">
          <p class="text-sm text-secondary font-medium"><%= t(".title") %></p>
          <%= render DS::Button.new(
            variant: :icon,
            size: :sm,
            icon: "maximize-2",
            type: "button",
            data: { controller: "fullscreen", action: "click->fullscreen#open", fullscreen_target_id_value: "net_worth_fullscreen_dialog" },
            class: "hidden sm:inline-flex"
          ) %>
        </div>

        <p class="text-primary -space-x-0.5 text-3xl font-medium <%= "animate-pulse" if balance_sheet.syncing? %>">
          <%= series.trend.current.format %>
        </p>

        <% if series.trend.nil? %>
          <p class="text-sm text-secondary"><%= t(".data_not_available") %></p>
        <% else %>
          <%= render partial: "shared/trend_change", locals: { trend: series.trend, comparison_label: period.comparison_label } %>
        <% end %>
      </div>
    </div>

    <div class="flex items-center gap-2">
      <%= form_with url: root_path, method: :get, data: { controller: "auto-submit-form", turbo_frame: "net_worth_section" } do |form| %>
        <div class="flex items-center gap-2">
          <% net_worth_options = Period.as_options + [["Custom", "custom"]] %>
          <% selected_key = period.key || "custom" %>
          <%= form.select :period,
                        net_worth_options,
                        { selected: selected_key },
                        data: { "auto-submit-form-target": "auto" },
                        class: "bg-container border border-secondary font-medium rounded-lg px-3 py-2 text-sm pr-7 cursor-pointer text-primary focus:outline-hidden focus:ring-0" %>

          <% if period.key.nil? %>
            <div class="flex items-center gap-2">
              <%= form.date_field :start_date,
                    value: period.start_date,
                    data: { "auto-submit-form-target": "auto" },
                    class: "bg-container border border-secondary rounded-lg px-2 py-2 text-sm text-primary focus:outline-hidden focus:ring-0" %>
              <span class="text-secondary text-sm">to</span>
              <%= form.date_field :end_date,
                    value: period.end_date,
                    data: { "auto-submit-form-target": "auto" },
                    class: "bg-container border border-secondary rounded-lg px-2 py-2 text-sm text-primary focus:outline-hidden focus:ring-0" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <% if series.any? %>
    <div
    id="netWorthChart"
    class="w-full flex-1 min-h-52"
    data-controller="time-series-chart"
    data-time-series-chart-data-value="<%= series.to_json %>"
    data-period-label="<%= period.key.present? ? period.label : nil %>"
    data-period-start="<%= period.start_date %>"
    data-period-end="<%= period.end_date %>"></div>
  <% else %>
    <div class="w-full h-full flex items-center justify-center">
      <p class="text-secondary text-sm"><%= t(".data_not_available") %></p>
    </div>
  <% end %>

</div>

